<Window x:Class="WpfApp1.GetMoney"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="GetMoney" Height="605" Width="400" Background="#FF1B1717" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Text="Get Money" VerticalAlignment="Top" Margin="55,10,0,0" Height="57" Width="286" Foreground="#FFC4D334" FontSize="36"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Text="How much do you want to get?" VerticalAlignment="Top" Margin="13,132,0,0" Height="59" Width="372" Foreground="#FFC4D334" FontSize="25"/>
        <TextBox x:Name="MoneyAmount" Background="#FF1B1717" TextAlignment="Center" Foreground="#FFC4D334" FontSize="35" HorizontalAlignment="Left"  Height="59" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Margin="71,191,0,0"/>
        <Button x:Name="GetMoneySubmitBtn" Content="Get" FontSize="30" Foreground="#FFC4D334" Background="#FF1B1717" HorizontalAlignment="Left" VerticalAlignment="Top" Width="183" Margin="101,442,0,0" Height="74" Click="GetMoneySubmitBtn_Click"/>
        <Button x:Name="GetMoneyBack" Content="Back" FontSize="12" Background="#FF1B1717" Foreground="#FF95AD29" HorizontalAlignment="Left" VerticalAlignment="Top" Width="89" Margin="30,545,0,0" Height="29" Click="GetMoneyBack_Click"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" TextAlignment="Center" Text="Card number :" VerticalAlignment="Top" Margin="13,294,0,0" Height="59" Width="372" Foreground="#FFC4D334" FontSize="25"/>
        <TextBox x:Name="CardNumber" Background="#FF1B1717" TextAlignment="Center" Foreground="#FFC4D334" FontSize="25" HorizontalAlignment="Left"  Height="59" TextWrapping="Wrap" VerticalAlignment="Top" Width="369" Margin="13,353,0,0"/>

    </Grid>
</Window>
