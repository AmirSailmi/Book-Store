            </TabItem>
            <TabItem Width="162" Height="30" Header="Serach" FontSize="16">

            </TabItem>
            <TabItem Width="140" Height="30" Header="Financial" FontSize="16">

            </TabItem>
        </TabControl>
        <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Center" Margin="10,670,0,0" Height="19" Background="#FF1B1717" Foreground="#FF95AD29"/>
        <Button Content="back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="70,670,0,0" Height="19" FontSize="12" Background="#FF1B1717" Foreground="#FF95AD29"/>
