<Window x:Class="WpfApp1.DeleteForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DeleteForm" Height="100" Width="300" WindowStyle="None" WindowStartupLocation="CenterScreen" Background="#FF1B1717">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="123*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="name " VerticalAlignment="Top" Margin="10,18,0,0" Height="43" Width="70" Foreground="#FF95AD29" FontSize="24"/>
        <TextBox x:Name="Bookname" HorizontalAlignment="Left" Height="21" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" Margin="85,27,0,0" Background="{x:Null}" BorderBrush="#FF383838" Foreground="#FF95AD29"/>
        <Button Content="Delete" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="119,64,0,0" Background="{x:Null}" Foreground="#FF95AD29" BorderBrush="#FF383838" Click="Delete"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="199,64,0,0" BorderBrush="#FF383838" Background="{x:Null}" Foreground="#FF95AD29" Click="Back"/>

    </Grid>
</Window>
